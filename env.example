# TradingView x Dhan Trading System - Environment Variables
# Copy this file to .env and fill in your actual values

# Webhook Authentication
WEBHOOK_TOKEN=your_webhook_secret_here

# Admin Authentication
ADMIN_TOKEN=your_admin_secret_here

# Dhan API Configuration
DHAN_TOKEN=your_dhan_api_token_here
DHAN_USER_ID=your_dhan_user_id
DHAN_PASSWORD=your_dhan_password

# Trading Configuration
DRY_RUN=true  # Set to false for production trading

# NSE Market Data API (if using external provider)
NSE_API_KEY=your_nse_api_key
NSE_API_SECRET=your_nse_api_secret

# Database Configuration (for future phases)
DATABASE_URL=sqlite:///./trading_system.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/trading_system.log

# Rate Limiting
MAX_ORDERS_PER_SECOND=25  # Dhan's documented rate limit

# Development Settings
DEBUG=true
RELOAD=true
